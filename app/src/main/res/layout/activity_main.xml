<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/btnAbrirPaginaWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="pgWeb"
        android:text="Abrir página Web" />

    <Button
        android:id="@+id/btnLlamada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="llamadaTelefono"
        android:text="Llamada teléfono" />
        <Button
            android:id="@+id/btnMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="googleMaps"
            android:text="Google Maps" />
        <Button
            android:id="@+id/btnTomarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="tomarFoto"
            android:text="Tomar foto" />
        <Button
            android:id="@+id/btnCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mandarCorreo"
            android:text="Mandar correo" />
        <Button
            android:id="@+id/btnGoogleMapsCalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="googleMapsCalle"
            android:text="Google Maps Calle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
